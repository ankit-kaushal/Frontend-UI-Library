{
  "name": "@thesilverlabs/ui",
  "version": "1.0.0",
  "description": "A modern React component library with TypeScript support, featuring Button, Loader, Radio components and a comprehensive theme system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./Button.css": "./dist/Button.css",
    "./Loader.css": "./dist/Loader.css",
    "./Radio.css": "./dist/Radio.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "react-components",
    "ui-library",
    "component-library",
    "typescript",
    "button",
    "loader",
    "radio",
    "theme",
    "dark-mode",
    "light-mode"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tslb/Frontend-UI-Library.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/tslb/Frontend-UI-Library/issues"
  },
  "homepage": "https://github.com/tslb/Frontend-UI-Library#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
