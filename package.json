{
  "name": "uiplex-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for React component library",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:docs\"",
    "dev:ui": "npm run dev --workspace=uiplex",
    "dev:docs": "npm run dev --workspace=docs",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.11.0",
    "npm": ">=8.0.0"
  }
}
